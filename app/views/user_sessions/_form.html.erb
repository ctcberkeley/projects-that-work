<%= semantic_form_for @user_session, :url => create_session_path do |f| %>
    <%= f.inputs do %>
      <%= f.input :email %>
      <%= f.input :password, :as => :password%>
    <% end %>
    <%= f.actions do %>
      <%= f.action :submit, :as => :button, :label => 'Login' %>
    <% end %>
<% end %>
