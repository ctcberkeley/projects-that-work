<%= semantic_form_for @user, :url => users_path do |f| %>
    <%= f.inputs do %>
      <%= f.input :first_name, :label => false, :input_html => {:value => 'First Name'}%>
      <%= f.input :last_name, :label => false,  :input_html => {:value => 'Last Name'} %>
      <%= f.input :username, :label => false,  :input_html => {:value => 'New Username'} %>
      <%= f.input :email, :as => :email, :label => false,  :input_html => {:value => 'Email Address'} %>
      <%= f.input :password, :as => :password, :label => false,  :input_html => {:value => 'New Password'} %>
    <% end %>
    <%= f.actions do %>
      <%= f.action :submit, :as => :button, :url => users_path, :label => 'Sign Up' %>
    <% end %>
<% end %>
