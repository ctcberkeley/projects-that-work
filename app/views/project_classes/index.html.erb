<div class="section">
  <div class="container">
    <div class="row">
      <div class="col-md-8">
        <h1>Project Classes</h1>
      </div>
      <div class="col-md-4">
       <%= form_tag(projects_path, :method => "get") do %>
          <div class="input-group search">
            <%= text_field_tag :search, params[:search], class: "form-control", placeholder: "Search Projects" %>
            <span class="input-group-btn">
              <button type="submit" class="btn btn-default"><span class="glyphicon glyphicon-search"></span></button>
            </span>
          </div>
        <% end %>
      </div>
    </div>
    <table class="table">
      <tr>
        <th>ID</th>
      </tr>
      <% @projectclasses.each do |projectclass| %>
        <tr>
          <td><%= link_to projectclass.id, project_class_path(@project, projectclass) %></td>
        </tr>
      <% end %>
    </table>
  </div>
</div>
