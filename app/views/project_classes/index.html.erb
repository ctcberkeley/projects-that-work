<div class="container">
  <div class="row">
    <div class="col-md-8">
      <h1>Project Classes</h1>
    </div>
    <div class="col-md-4">
     <%= form_tag(project_class_index_path, :method => "get", class: "navbar-form", id: "search-form") do %>
      <div class="input-append">
        <%= text_field_tag :search, params[:search], class: "span2", placeholder: "Search Classes" %>
        <!-- In order to have the "search" icon int the button, we need to use plain HTML instead 
             of using a Rails form helper -->
        <button class="btn" type="submit"><i class="icon-search"></i></button>
      </div>
    <% end %>
    <%= yield %>
    </div>
  </div> 
  <div class="row">

    <table class="table">
      <tr>
        <th>ID</th>
        
      </tr>
     
      <% @projectclasses.each do |projectclass| %>
        <tr>
          <td><%= link_to projectclass.id, project_class_path(@project,projectclass) %></td>
         
        </tr>
      <% end %>
    </table>
  </div> 
</div>

