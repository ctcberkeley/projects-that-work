<h1>New Project</h1>

<%= semantic_form_for :project, url: projects_path do |p|%>
  <%= p.inputs do %>
    <%= p.input :name, :label => 'Title' %>
    <%= p.input :description, :label => 'Description', :hint => 'A broad high-level overview of the project', :as => :text, :input_html => { :maxlength => 300, :rows => 4} %>
    <%= p.input :startDate, :as => :date_select %>
    <%= p.input :endDate, :as => :date_select %>
    <%= p.input :grade, :label => 'Grade Level', :hint => 'Recommended Grade Level to participate in project', :as => :range, :min => 6, :max => 12 %>
    <%= p.input :course, :label => 'Course', :hint => 'Most relevant subjects this project will cover' %>
    <%= p.input :numStudents, :label => 'Class Size', :hint => 'Recommended number of students to participate in project', :as => :range, :min => 5, :step => 5 %>
  <% end %>
  <%= p.actions do %>
    <%= p.action :submit, :as => :button, :url => projects_path, :label => 'Create Project' %>
    <%= p.action :cancel, :as => :link, :url => projects_path %>
  <% end %> 
<% end %>

<%= link_to 'Back to Project List', projects_path %>
