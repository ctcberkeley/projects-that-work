<div class="section">
  <div class="container">
    <h1 class="pull-left">Projects</h1>
    <%= form_tag(projects_path, :method => "get", class: "form-inline pull-right") do %>
      <div class="form-group">
        <%= text_field_tag :search, params[:search], class: "form-control", placeholder: "Search Projects" %>
      </div>
      <button type="submit" class="btn btn-default"><span class="glyphicon glyphicon-search"></span></button>
    <% end %>
    <table class="table">
      <tr>
        <th>Name</th>
        <th>Description</th>
      </tr>
      <% @projects.each do |project| %>
        <tr>
          <td><%= link_to project.name, project %></td>
          <td><%= project.description %></td>
        </tr>
      <% end %>
    </table>
    <% if current_user and user_is_teacher %>
      <%= link_to 'New Project', new_project_path, class: "btn btn-primary btn-lg" %>
    <% end %>
  </div>
</div>
