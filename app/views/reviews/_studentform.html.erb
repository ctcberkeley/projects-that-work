<%= semantic_form_for @review do |f| %>
    <%= f.inputs do %>
      <%= f.input :project_id, :as => :select, :collection => @current_role.project_classes.all { |p| [p.project.name, p.project.id] }, :label => 'Project' %>
      <%= f.input :overallScore, :as => :number, :label => 'Overall Score' %>
      <%= f.input :planningScore, :as => :number, :label => 'Planning Score' %>
      <%= f.input :implementationScore, :as => :number, :label => 'Implementation Score' %>

      <%= f.input :learningScore, :as => :number, :label => 'Learning Score' %>

      <%= f.input :enjoyabilityScore, :as => :number, :label => 'Enjoyability Score' %>
      <%= f.input :repeatabilityScore, :as => :number, :label => 'Repeatability Score' %>

      <%= f.input :comment, :label => 'Comments', :as => :text, :input_html => { :maxlength => 300, :rows => 4, :spellcheck => true} %>


    <% end %>
    <%= f.actions do %>
      <%= f.action :submit, :as => :button, :label => 'Submit Review' %>
      <%= f.action :cancel, :as => :link,  :label => "Cancel", :url => reviews_path %>
    <% end %>
<% end %>
